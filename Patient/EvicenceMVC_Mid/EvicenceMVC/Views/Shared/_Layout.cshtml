<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>

        .main {
            padding-top: 20px;
            /*height: calc(100vh - 140px);*/
        }
    </style>
    @RenderSection("styles", false)

</head>
<body>
    <nav class="navbar navbar-light text-white bg-success navbar-expand-md text-center  shadow-sm">
        <div class="container-fluid text-center">
            <span class="navbar-brand text-white">Patient</span>
            <div class="navbar-collapse collapse text-center">
                <ul class="navbar-nav nav text-white text-center ">
                    <li class="nav-item">
                        @Html.ActionLink("Report", "PatientList", "Home", new { }, new { @class = "nav-link text-white text-center" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Tests", "Index", "Tests", new { }, new { @class = "nav-link text-white text-center" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Test Types", "Index", "TestTypes", new { }, new { @class = "nav-link text-white text-center" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Test Entries", "Index", "TestEntries", new { }, new { @class = "nav-link text-white text-center " })
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <br />
    <br />
    <footer class="fixed-bottom bg-success text-center">
        <a class=" text-white">www.patient.com</a>
    </footer>
    <section class="container-fluid main">
        @RenderBody()
    </section>
    @*<footer class="container-fluid">
            <p>Oh My Foot</p>
        </footer>*@
    @RenderSection("scripts", false)
</body>
</html>